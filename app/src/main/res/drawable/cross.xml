<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="40sp"
        android:gravity="center">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="line">
                <stroke android:width="5sp" android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
    <item
        android:width="40sp"
        android:gravity="center">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90"
            >
            <shape android:shape="line">
                <stroke android:width="5sp" android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
</layer-list>