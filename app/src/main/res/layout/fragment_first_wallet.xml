<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skesw12.kebthung.fragments.FirstWalletFragment"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What does your wallet call?"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:id="@+id/wallet_name_text"
        android:layout_margin="@dimen/fab_margin"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Wallet Name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much money in your wallet?"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:id="@+id/name_text"
        android:layout_margin="@dimen/fab_margin"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Amount of Money"
        />
</LinearLayout>
