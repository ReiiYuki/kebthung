<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.WishFragment"
    android:orientation="vertical"
    android:background="@android:color/background_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            app:cb_color="#1aa3ff"
            android:layout_alignParentLeft="true"
            app:cb_pressedRingWidth="@dimen/dp_8"
            android:src="@drawable/ic_create_white_36dp"
            android:id="@+id/edit_button"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_50"
            android:textAlignment="center"
            android:id="@+id/wish_name"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_alignParentTop="true"
            android:text="Total"
            android:layout_weight="0"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            />
        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            app:cb_color="#00e600"
            app:cb_pressedRingWidth="@dimen/dp_8"
            android:id="@+id/success_button"
            android:src="@drawable/ic_done_white_48dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/wish_wave_layout"
        android:layout_alignBottom="@id/wish_name"
        android:layout_margin="@dimen/fab_margin"
        android:layout_weight="0"
        >
        <me.itangqi.waveloadingview.WaveLoadingView
            android:id="@+id/wish_progress_wave"
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_275"
            custom:wlv_borderColor="@color/colorAccent"
            custom:wlv_borderWidth="@dimen/dp_3"
            custom:wlv_shapeType="circle"
            custom:wlv_titleCenter="Center Title"
            custom:wlv_titleCenterColor="@android:color/white"
            custom:wlv_titleCenterSize="@dimen/dp_50"
            custom:wlv_waveAmplitude="70"
            android:fontFamily="sans-serif-light"
            custom:wlv_waveColor="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/wish_wave_layout"
        android:orientation="vertical"
        android:layout_weight="0">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_wish_button"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/dp_20"
            android:text="ADD GOAL"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wish_spinner"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="@dimen/fab_margin"
            ></Spinner>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wallet_spinner"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="@dimen/fab_margin"
            ></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/wish_target"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/dp_20"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_orange_light"
                android:minHeight="?android:attr/listPreferredItemHeight"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:id="@+id/wish_deadline"
                android:background="@android:color/holo_green_light"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:textSize="@dimen/dp_20"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/wish_left"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/dp_20"
                android:background="@android:color/holo_blue_bright"
                android:textColor="@android:color/white"
                android:minHeight="?android:attr/listPreferredItemHeight"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/wish_days"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/dp_20"
                android:background="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:minHeight="?android:attr/listPreferredItemHeight"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
