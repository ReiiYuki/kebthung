<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skesw12.kebthung.fragments.WhatsNewFragment"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_event_note_black_48dp"
        android:id="@+id/img_new"
        android:layout_margin="@dimen/fab_margin"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_40"
        android:text="What's new?"
        android:id="@+id/what_title"
        android:gravity="center"
        android:layout_margin="@dimen/fab_margin"
        android:layout_below="@id/img_new"
        />
    <ListView
        android:layout_below="@id/what_title"
        android:layout_margin="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_list"></ListView>

</RelativeLayout>
